<p id="notice"><%= notice %></p>

<div id="product_show">
  <p>
    <b>Title:</b>
    <%= @product.title %>
  </p>

  <p>
    <b>Description:</b>
    <%= @product.description %>
  </p>

  <p>
    <b>Image url:</b>
    <%= @product.image_url %>
  </p>

  <p>
    <%= image_tag(@product.image_url, :class => "image_view") %>
  </p>

  <p>
    <b>Price:</b>
    <span class="price"><%= number_to_currency(@product.price) %></span>
  </p>

</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
