<p id="notice"><%= notice %></p>

<table id="cart">
  <tr>
    <th class="line_item_title">Title</th>
    <th class="line_item_quantity">Quantity</th>
    <th class="line_item_subtotal">Subtotal</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @line_items.each do |item| %>
  <tr>
    <td class="line_item_title"><%= item.product.title %></td>
    <td class="line_item_quantity"><%= item.quantity || 'N/A' %></td>
    <td class="line_item_subtotal">
      <%= item.quantity.nil? ? 'N/A' : number_to_currency(item.quantity * item.product.price) %></td>
    <td><%= link_to 'Edit', edit_line_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Continue Shopping', store_path %>
