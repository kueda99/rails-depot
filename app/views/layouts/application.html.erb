<!DOCTYPE html>
<html>
  <head>
    <title>Pragprog Books Online Store</title>
    <!-- START:stylesheet -->
    <%= stylesheet_link_tag "scaffold" %>
    <%= stylesheet_link_tag "depot", :media => "all" %><!-- <label id="code.slt"/> -->
    <!-- END:stylesheet -->
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %><!-- <label id="code.csrf"/> -->
  </head>

  <body id="store">

    <div id="banner">
      <%= image_tag("logo.png") %>
      <%= @page_title || "Pragmatic Bookshelf" %><!-- <label id="code.depot.e.title"/> -->
    </div>

    <div id="columns" class="<%= admin_or_customer %>">
      <div id="side" class="<%= admin_or_customer %>">
        <a href="http://www....">Home</a><br />
        <a href="http://www..../faq">Questions</a><br />
        <a href="http://www..../news">News</a><br />
        <a href="http://www..../contact">Contact</a><br />
        <br />
        <% if session[:user_id].nil? %>
        <% unless (@cart.nil? || @cart.id.nil?) %>
        <%= link_to 'Show my cart', cart_path(@cart.id) %>
        <br />
        <br />
        <%= render :partial => "carts/cart" %>
        <% end %>
        <%= link_to 'Switch to Admin', sessions_switch_to_admin_path, :from => request.url %>
        <% else %>
        <%= link_to 'Switch to Customer', sessions_switch_to_customer_path, :from => request.url %>
        <% end %>
      </div>

      <div id="main">
        <%= yield %><!-- <label id="code.depot.e.include"/> -->
      </div>
    </div>

  </body>
</html>
